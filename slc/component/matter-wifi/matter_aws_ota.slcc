id: matter_aws_ota
package: matter
description: This component enables MATTER AWS OTA feature for matter-wifi
label: OTA Download through AWS Cloud
category: Matter-WiFi|Features
quality: production
metadata:
  sbom:
    license: Zlib

provides:
  - name: matter_aws_ota

requires:
  - name: matter_aws

define:
  - name: SL_MATTER_ENABLE_AWS_OTA_FEAT
    value: "1"

include:
  - path: third_party/aws_ota_sdk/demos/ota/ota_demo_core_mqtt
    file_list:
      - path: core_mqtt_config.h
      - path: demo_config.h
      - path: ota_config.h
  - path: third_party/aws_ota_sdk/demos/ota/common/include
    file_list:
      - path: pal.h
      - path: mqtt_subscription_manager.h
  - path: third_party/aws_ota_sdk/ota-for-aws-iot-embedded-sdk/source/include
    file_list:
      - path: ota_appversion32.h
      - path: ota.h
      - path: ota_base64_private.h
      - path: ota_cbor_private.h
      - path: ota_mqtt_interface.h
      - path: ota_private.h
      - path: ota_config_defaults.h
      - path: ota_cbor_private.h
      - path: ota_interface_private.h
      - path: ota_os_interface.h
      - path: ota_mqtt_private.h
      - path: ota_platform_interface.h
      - path: ota_http_interface.h
  - path: third_party/aws_ota_sdk/ota-for-aws-iot-embedded-sdk/source/portable/os
    file_list:
      - path: ota_os_freertos.h
  - path: third_party/aws_ota_sdk/ota-for-aws-iot-embedded-sdk/source/dependency/3rdparty/tinycbor/src
    file_list:
      - path: cbor.h
      - path: tinycbor-version.h
      - path: cborinternal_p.h
      - path: compilersupport_p.h
      - path: cborjson.h
      - path: utf8_p.h
  - path: third_party/aws_ota_sdk/ota-for-aws-iot-embedded-sdk/source/dependency/coreJSON/source/include
    file_list:
      - path: core_json.h

template_contribution:
  - name: mbedtls_ssl_content_len_in_requirement
    value: 5120
  - name: mbedtls_ssl_content_len_out_requirement
    value: 1560

source:
  - path: third_party/aws_ota_sdk/demos/ota/ota_demo_core_mqtt/ota_demo_core_mqtt.c
  - path: third_party/aws_ota_sdk/demos/ota/common/src/mqtt_subscription_manager.c
  - path: third_party/aws_ota_sdk/demos/ota/common/src/pal.c
  - path: third_party/aws_ota_sdk/demos/ota/ota_demo_core_mqtt/ota.c
  - path: third_party/aws_ota_sdk/ota-for-aws-iot-embedded-sdk/source/ota_base64.c
  - path: third_party/aws_ota_sdk/ota-for-aws-iot-embedded-sdk/source/ota_interface.c
  - path: third_party/aws_ota_sdk/ota-for-aws-iot-embedded-sdk/source/ota_mqtt.c
  - path: third_party/aws_ota_sdk/ota-for-aws-iot-embedded-sdk/source/ota_cbor.c
  - path: third_party/aws_ota_sdk/ota-for-aws-iot-embedded-sdk/source/portable/os/ota_os_freertos.c
  - path: third_party/aws_ota_sdk/ota-for-aws-iot-embedded-sdk/source/dependency/coreJSON/source/core_json.c
  - path: third_party/aws_ota_sdk/ota-for-aws-iot-embedded-sdk/source/dependency/3rdparty/tinycbor/src/cborparser.c
  - path: third_party/aws_ota_sdk/ota-for-aws-iot-embedded-sdk/source/dependency/3rdparty/tinycbor/src/cborencoder.c
  - path: third_party/aws_ota_sdk/ota-for-aws-iot-embedded-sdk/source/dependency/3rdparty/tinycbor/src/cborencoder_close_container_checked.c
